{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../uploads",
        "outDir": "dist/uploads",
        "watchAssets": true
      },
      {
        "include": "/emails/template",
        "outDir": "dist/src",
        "watchAssets": true
      }
    ],
    "watchAssets": true
  }
}
